{
  "name": "Table of Contents Sidebar",
  "version": "1.0",
  "author": "CodeDraken",
  "description": "A lightweight plugin that generates a table of contents sidebar for navigating or copying",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "ToC",
    "default_popup": "./src/popup.html"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["./src/content.js"],
          "css": ["./src/content.css"],
          "run_at": "document_end"
      }
  ],
  "permissions": ["activeTab"]
}
